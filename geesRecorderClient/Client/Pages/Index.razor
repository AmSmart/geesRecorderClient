@page "/"
@using geesRecorderClient.Client.Pages.Dashboard
@inject HttpClient HttpClient

<h1>Hello!</h1>

Welcome to geesRecorder.

@if (!LoggedIn)
{
    if (SignUpToggle)
    {
        @SignUp
    }
    else
    {
        @SignIn
    }
}
else
{
    <ProjectDashboard />
}

@code{
    protected RenderFragment SignUp => __builder =>
        {
        <h5>Create a new account!</h5>
        <EditForm Model="@SignUpDTO" OnValidSubmit="SignUpSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <MatTextField class="form-control" HideClearButton="false" Label="Email" @bind-Value="SignUpDTO.Email" />
            <MatTextField class="form-control" Label="Password" @bind-Value="SignUpDTO.Password" />
            <MatTextField class="form-control" Label="Confirm Password" @bind-Value="SignUpDTO.ConfirmPassword" />
            <MatTextField class="form-control" Label="4-digit Pin" @bind-Value="SignUpDTO.Pin" />
            <MatButton class="btn btn-primary">Submit</MatButton>
        </EditForm>
        <a @onclick="Toggle" href=""><u>Already have an account? Sign In</u></a>
        };

    protected RenderFragment SignIn => __builder =>
        {
        <h5>Sign in to an existing account!</h5>
        <EditForm Model="@SignUpDTO" OnValidSubmit="SignInSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <MatTextField class="form-control" HideClearButton="false" Label="Email" @bind-Value="@SignUpDTO.Email" />
            <MatTextField class="form-control" Label="Password" @bind-Value="@SignUpDTO.Password" />
            <MatButton class="btn btn-primary">Submit</MatButton>
        </EditForm>
        <a @onclick="Toggle" href=""><u>Don't have an account? Sign Up</u></a>
    };
}